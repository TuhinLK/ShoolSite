<div class="form">
	
	<%= form_for (teacher) do |f| %>
		<div class="row">
			<div class="field">
				<%= f.label :first_name %>				
			</div>
			<div class="field2">
				<%= f.text_field :first_name %>
			</div>
		</div>
		
		<div class="row">
			<div class="field">
				<%= f.label :last_name %>				
			</div>
			<div class="field2">
				<%= f.text_field :last_name %>
			</div>
		</div>
		
		<div class="row">
			<div class="field">
				<%= f.label :phone_number %>				
			</div>
			<div class="field2">
				<%= f.text_field :phone_number %>
			</div>
		</div>

		<div class="row">
			<div class="field">
				<%= f.label :email %>				
			</div>
			<div class="field2">
				<%= f.text_field :email %>
			</div>
		</div>

		<div class="row">
			<div class="field">
				<%= f.label :address %>
			</div>
			<div class="field2">
				<%= f.text_area :address %>
			</div>
		</div>
		
		<div class="row">
			<%= f.submit %>
		</div>
	<% end %>
</div>