<h1>Subject List</h1>
<table id="list">
	<tr>
		<th>Subject Name</th>
		<th colspan="3"></th>
	</tr>
	<% @subjects.each do |subject| %>
		<tr>
			<td> <%= subject.subject_name %> </td>
			<td><%= link_to 'Details', subject %></td>
        	<td><%= link_to 'Edit', edit_subject_path(subject) %></td>
        	<td><%= link_to 'Destroy', subject, method: :delete,
                    data: { confirm: 'Are you sure?' } %></td>

		</tr>
	<% end %>
	
</table>