<h1>Student List</h1>
<table id="list">
	<tr>
		<th>Student Name</th>
		<th colspan="3"></th>
	</tr>
	<% @students.each do |student| %>
		<tr>
			<td> <%= student.fullname %> </td>
			<td><%= link_to 'Details', student %></td>
        	<td><%= link_to 'Edit', edit_student_path(student) %></td>
        	<td><%= link_to 'Destroy', student, method: :delete,
                    data: { confirm: 'Are you sure?' } %></td>

		</tr>
	<% end %>
	
</table>